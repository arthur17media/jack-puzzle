html, body
  width 100%
  height 100%
  margin 0
  padding 0

.app
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  menu-height = 40px
  &-menu
    position absolute
    left 0
    top 0
    right 0
    height menu-height
    background #222
    a
      display inline-block
      color white
      text-decoration none
      height menu-height
      padding 0 20px
      line-height menu-height
      &.active
        background rgba(#fff, .2)
  &-content
    position absolute
    left 0
    top menu-height
    right 0
    bottom 0
